acl lan {
                {% for i in allowed -%}
                {{i}};
                {%endfor%}
        };

options {

	directory "/var/cache/bind";

        forwarders {
                {% for i in forwarders -%}
                {{i}};
                {%endfor%}
	};

        allow-query { lan; };
    
	dnssec-validation no;

};

statistics-channels {
  inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};

key "dns_transfer_key" {
        algorithm hmac-sha256;
        secret "{{ dns_transfer_key }}";
};

key "dns_update_key" {
	algorithm hmac-sha256;
	secret "{{ dns_update_key }}";
};

